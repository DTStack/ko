{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": false,
        "rootDirs": ["./src"],
        "baseUrl": "./src",
        "paths": {},
        "jsx": "react",
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "importHelpers": false,//tslib
        "experimentalDecorators": true,
        "lib": ["es7", "dom"],
        "skipLibCheck": true,
        "typeRoots": ["node", "node_modules/@types", "./typings"]
    }
  }
  